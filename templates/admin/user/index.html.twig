{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex">
        {% include 'partials/sidemenu.html.twig'
            with {'items': [
            {
                'path': 'app_admin_dashboard',
                'label': 'app.menu.admin' | trans | capitalize,
            },
            {
                'path': 'app_admin_user_management',
                'label': 'app.menu.user_management' | trans | capitalize,
                'active': 'active',
            },
            {
                'path': 'app_admin_characteristics',
                'label': 'app.menu.characteristics' | trans | capitalize,
            }
        ]} %}
        <div class="col-10">
            <h4 class="text-left mt-5 ml-2">User overzicht</h4>
            <div class="d-flex flex-row-reverse">
                <a href="{{ path('app_admin_user_add') }}">
                    <div class="btn btn-outline-primary m-2"><i class="fas fa-plus"></i>&nbsp;User toevoegen
                    </div>
                </a>
            </div>
            <table id="user-management-list" class="table table-striped table-bordered"
                   data-target-url="{{ path('app_admin_user_management') }}">
                <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Acties</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app_admin_user_management') }}
{% endblock %}
