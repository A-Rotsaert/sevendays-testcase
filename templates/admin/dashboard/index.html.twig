{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex">
        {% include 'partials/sidemenu.html.twig'
            with {'items': [
            {
                'path': 'app_admin_dashboard',
                'label': 'app.menu.admin' | trans | capitalize,
                'active': 'active',
            },
            {
                'path': 'app_admin_user_management',
                'label': 'app.menu.user_management' | trans | capitalize,
            },
            {
                'path': 'app_admin_characteristics',
                'label': 'app.menu.characteristics' | trans | capitalize,
            }
        ]} %}
        <div class="row justify-content-center m-4">
            <div class="col-6">
                <div class="card" style="width: 20rem;">
                    <div class="card-body text-center">
                        <i class="fas fa-line-chart fa-2x p-4"></i>
                        <div class="lead">
                            {{ 'app.total'|trans|capitalize }}
                            {{ 'app.amount'|trans }}
                            {{ 'app.menu.families'|trans }}
                        </div>
                        <h2 class="card-title">{{ totals.families }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card" style="width: 20rem;">
                    <div class="card-body text-center">
                        <i class="fa fa-children fa-2x p-4"></i>
                        <div class="lead">
                            {{ 'app.total'|trans|capitalize }}
                            {{ 'app.amount'|trans }}
                            {{ 'app.menu.children'|trans }}
                        </div>
                        <h2 class="card-title">{{ totals.children }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
