<div class="container mt-auto">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                <svg class="bi" width="30" height="24">
                    <use xlink:href="#bootstrap"/>
                </svg>
            </a>
            <span class="mb-3 mb-md-0 text-muted">
                &copy;&nbsp;{{ copyright_year }}
                <a href="{{ company_website }}" target="_blank" class="text-muted text-decoration-none">
                    {{ company }}
                </a>
            </span>
        </div>

        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li><i class="fa-solid fa-language"></i></li>
            <li class="ms-3">
                <a class="text-muted"
                   href="{{ path(app.request.get('_route'), app.request.attributes.get('_route_params')|filter(v => v < '_locale')|merge({'_locale': 'nl'})) }}">
                    <span class="fi fi-be fib"></span>
                </a>
            </li>
            <li>
                <a class="text-muted m-2"
                   href="{{ path(app.request.get('_route'), app.request.attributes.get('_route_params')|filter(v => v < '_locale')|merge({'_locale': 'en'})) }}">
                    <span class="fi fi-us fib"></span>
                </a>
            </li>
        </ul>
    </footer>
</div>